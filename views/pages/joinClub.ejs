<head>
    <% include ../partial/head %>
    <style>
        .goola {
            border: 6px solid #ccc;
            width: 100px;
            padding: 5px;
            display: inline;
            margin: 1px 8px;
            background-color: #dadada;
            color: #222;
            font-weight: 500;
        }

        .tip {
            width: 0px;
            height: 0px;
            position: absolute;
            background: transparent;
            border: 10px solid #ccc;
        }

        .tip-up {
            top: -25px;
            /* Same as body margin top + border */
            left: 10px;
            border-right-color: transparent;
            border-left-color: transparent;
            border-top-color: transparent;
        }

        .dialogbox .body {
            position: relative;
            height: auto;
            margin: 20px 10px;
            padding: 5px;
            background-color: #DADADA;
            border-radius: 3px;
            border: 5px solid #ccc;
        }

        .body .message {
            min-height: 30px;
            border-radius: 3px;
            font-family: Arial;
            font-size: 14px;
            line-height: 1.5;
            color: #797979;
        }

        article.style3:hover>.image {
            transform: scale(1) !important;

        }

        .dialogbox {
            margin: 4px;
            width: 50%;
        }

        form {
            display: flex;
            align-items: baseline;
            justify-content: baseline;
            width: 50%;
        }

        .tiles article.style3 .image::before {
            background-color: transparent;
        }

        .tiles article.style3 .content {
            opacity: 1;
        }

        .tiles article>a .content {
            max-height: none;
        }
    </style>
</head>

<body class="is-preload">

    <% include ../partial/header %>
    <div class="container">
        <section class="tiles">
            <article class="style3" style="width:100%;height:300px;">
                <span class="image" style="opacity:1;">
                    <img src="/images/pic03.jpg" alt="" style="height:100%;" />
                </span>
                <a>
                    <select name="demo-category" id="selectedClub">
                        <option value="0">CSEC</option>
                        <option value="1">EXE</option>
                        <option value="2">GLUG</option>
                        <option value="3">Pixonoids</option>
                        <option value="4">English</option>
                    </select>
                    <div class="butttons" style="margin-top: 10px">
                        <button class="button small" onclick="joinClub()">Join</button>
                    </div>
                </a>
            </article>
        </section>
    </div>
    <% include ../partial/footer %>
    <script>
        function getSelectedText(elementId) {
            var elt = document.getElementById(elementId);
            if (elt.selectedIndex == -1)
                return null;
            return elt.options[elt.selectedIndex].text;
        }
        function joinClub(){
            console.log(getSelectedText('selectedClub'));
        }
    </script
</body>